{% extends 'default.html.twig' %}

{% block body %}

    <div>
        <h4 class="text-center">Liste des adresses [ {% if contact is defined %}{{ contact.nom }} {{ contact.prenom }} : {{ contact.email }} {% endif %} ]</h4>
    </div>
    <div class="row row col-md-12 pull-right ">
        <a href="/address/add/{{ idContact }}" class="btn btn-primary btn-xs pull-right"><b>+</b> CrÃ©er une adresse</a>
    </div>

    {% if message is defined %}
        <div>&nbsp;</div>
        {% for m in message %}
            <div class="alert alert-danger">
                {{ m }}
            </div>
        {% endfor %}
    {% endif %}

    <div class="row col-md-12 ">
        <table class="table table-striped custab">
            <thead>
            <tr>
                <th>ID</th>
                <th>Numero</th>
                <th>Rue</th>
                <th>Code Postal</th>
                <th>ville</th>
                <th>pays</th>
                <th class="text-center">Action</th>
            </tr>
            </thead>
            {% for addresse in addresses %}
                <tr>
                    <td>{{ addresse.id|e }}</td>
                    <td>{{ addresse.number|e }}</td>
                    <td>{{ addresse.street|e }}</td>
                    <td>{{ addresse.postalCode|e }}</td>
                    <td>{{ addresse.city|e }}</td>
                    <td>{{ addresse.country|e }}</td>
                    <td class="text-center">
                        <a class='btn btn-info btn-xs' href="/address/edit/{{ addresse.id }}"><span
                                    class="glyphicon glyphicon-edit"></span> Editer</a>
                        <a href="/address/delete/{{ addresse.id }}" class="btn btn-danger btn-xs"><span
                                    class="glyphicon glyphicon-remove"></span> Supprimer</a></td>
                </tr>
            {% endfor %}

        </table>
    </div>
{% endblock %}
